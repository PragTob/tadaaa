<h1>Listing offers</h1>

<%= form_for(:offer, url: offers_search_path, method: :get) do |f| %>
  <%= f.text_field :search, class: "input-small", placeholder: "Title" %>
  <%= f.submit "Search" %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Asking price</th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= link_to offer.title, offer %></td>
    <td><%= offer.asking_price %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Offer', new_offer_path %>
